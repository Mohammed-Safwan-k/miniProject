<body style="background-color: black;">
  
<header>
    <nav class="navbar navbar-expand-lg bg-secondary">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold fs-3 " href="#">CAR STORE</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link fw-bold text-black" aria-current="page" href="/user-home">Products</a>
            </li>
            <li class="nav-item">
              <a class="text-black nav-link fw-bold" href="#">Orders</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-black fw-bold" href="#">Offers</a>
            </li>
          </ul>
          <a href="/logout" class="btn btn-dark fw-bold text-white btn-sm" role="button">Log Out</a>
        </div>
      </div>
    </nav>
  </header>
  <section>
    
    <div class="container-fluid mt-5">
      <div class="row " >
        {{#each products}}
        <div class="col-sm-6 col-md-3 d-flex justify-content-evenly ">
          <div class="card my-5 d-flex text-center bg-secondary" style="width: 15rem;">
            <img src="{{this.image}}"  class="card-img-top" style="height: 150px;" alt="...">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.category}}</p>
              <h5 class="card-text">{{this.price}}</h5>
              <a href="#" class="btn btn-dark fw-bold">Add to cart</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
  </body>
